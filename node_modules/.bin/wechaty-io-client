#!/bin/sh
basedir=$(dirname "$(echo "$0" | sed -e 's,\\,/,g')")

case `uname` in
    *CYGWIN*) basedir=`cygpath -w "$basedir"`;;
esac

if [ -x "$basedir/-S" ]; then
  "$basedir/-S"  node --no-warnings --loader ts-node/esm "$basedir/../wechaty/dist/esm/bin/io-client.js" "$@"
  ret=$?
else 
  -S  node --no-warnings --loader ts-node/esm "$basedir/../wechaty/dist/esm/bin/io-client.js" "$@"
  ret=$?
fi
exit $ret
